<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.waleed.audioandmore.DLNADevicesActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/reViewDevices"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


    <Button
        android:id="@+id/btnDiscoverDLNA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Discover"
        app:layout_constraintBottom_toBottomOf="@+id/reViewDevices"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <Button
        android:id="@+id/refreshBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Refresh"
        app:layout_constraintBottom_toBottomOf="@+id/reViewDevices"
        app:layout_constraintStart_toEndOf="@+id/btnDiscoverDLNA"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
